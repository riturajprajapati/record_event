{
  "manifest_version": 3,
  "name": "Event Recorder",
  "version": "1.0",
  "description": "Records user events on web pages.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "all_iframes": true,
      "matches": ["<all_urls>"],
      "js": ["content.js", "background.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "48": "icon48.png"
  },
  "permissions": ["storage", "activeTab"],
  "web_accessible_resources": [
    {
        "resources": ["img/*"],
        "matches": ["<all_urls>"]
    }
]
}
